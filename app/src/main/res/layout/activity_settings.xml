<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.puxiang.mall.module.userinfo.viewmodel.SettingsViewModel"/>

        <variable
            name="isNewestVersion"
            type="Boolean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sideMarginTop"
            android:background="@drawable/shadow"
            android:elevation="@dimen/elevation_height"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_settings_password"
                style="@style/titleMarginStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:orientation="horizontal">

                <TextView
                    style="@style/titleTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改密码"/>

                <ImageView
                    style="@style/nextImgStyle"
                    android:src="@mipmap/my_open"/>
            </LinearLayout>

            <View
                android:id="@+id/v1"
                style="@style/lineStyle"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:id="@+id/ll_settings_info"
                style="@style/titleMarginStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:orientation="horizontal">

                <TextView
                    style="@style/titleTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="个人信息"/>

                <ImageView
                    style="@style/nextImgStyle"
                    android:src="@mipmap/my_open"/>
            </LinearLayout>

            <View
                android:id="@+id/v2"
                style="@style/lineStyle"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:id="@+id/ll_settings_version"
                style="@style/titleMarginStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_version_name"
                    style="@style/titleTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15px"
                    android:layout_weight="1"
                    android:text="版本"/>

                <TextView
                    android:id="@+id/tv_version_isNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15px"
                    android:background="@color/sale_price"
                    android:paddingBottom="2px"
                    android:paddingLeft="6px"
                    android:paddingRight="6px"
                    android:paddingTop="2px"
                    android:text="New"
                    android:textColor="@color/white"
                    android:textSize="23px"
                    android:visibility="@{isNewestVersion?View.INVISIBLE:View.VISIBLE}"/>

                <ImageView
                    style="@style/nextImgStyle"
                    android:src="@mipmap/my_open"/>
            </LinearLayout>

            <View
                android:id="@+id/v3"
                style="@style/lineStyle"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:id="@+id/ll_settings_logout"
                style="@style/titleMarginStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:orientation="horizontal">

                <TextView
                    style="@style/titleTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="退出登录"/>

                <ImageView
                    style="@style/nextImgStyle"
                    android:src="@mipmap/my_open"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
        <!--<item name="android:windowBackground">@color/white</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>


    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="AppTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/theme</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/guide_one</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="noneTextStyle">
        <item name="android:textSize">27px</item>
        <item name="android:textColor">#afb4c1</item>
    </style>

    <style name="style_ptr">
        <item name="com.puxiang.mall:ptr_duration_to_close">1000</item>
        <item name="com.puxiang.mall:ptr_duration_to_close_header">600</item>
        <item name="com.puxiang.mall:ptr_keep_header_when_refresh">true</item>
        <item name="com.puxiang.mall:ptr_pull_to_fresh">false</item>
        <item name="com.puxiang.mall:ptr_ratio_of_header_height_to_refresh">1.5</item>
        <item name="com.puxiang.mall:ptr_resistance">1.7</item>
    </style>

    <style name="homeSearchTips">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300px</item>
        <item name="android:layout_marginTop">0dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">5000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#00aaaaaa</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/select_point</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">@dimen/sideMargin</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">10px</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">-5px</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">1000</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">0sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
    </style>

    <!-- Toolbar返回键 -->
    <style name="ToolbarBackBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingRight">@dimen/sideMargin</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:paddingTop">26px</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">26px</item>
        <item name="android:src">@mipmap/nav_back_g</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="titleTextAlphaStyle">
        <item name="android:textSize">@dimen/sideMargin</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/title_alpha77</item>
    </style>

    <style name="homeItemTitleStyle">
        <item name="android:textSize">27px</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/sideMargin</item>
        <item name="android:paddingRight">@dimen/sideMargin</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="lineStyle">
        <item name="android:background">#ebebeb</item>
        <item name="android:layout_marginLeft">@dimen/sideMargin</item>
        <item name="android:layout_marginRight">@dimen/sideMargin</item>
    </style>

    <!-- 圈子用户头像 -->
    <style name="BbsCircleHeadPicStyle">
        <item name="android:layout_width">93px</item>
        <item name="android:layout_height">93px</item>
    </style>
    <!-- 圈子title -->
    <style name="BbsCircleTitleStyle">
        <item name="android:textSize">28px</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginTop">30px</item>
    </style>
    <!-- 圈子简介 -->
    <style name="BbsCircleBriefTextStyle">
        <item name="android:textSize">25px</item>
        <item name="android:textColor">@color/plateInfoColor</item>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="com.puxiang.mall.R" />

        <variable
            name="viewModel"
            type="com.puxiang.mall.module.mall.viewmodel.MallViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarSizeHeight"
        android:background="@color/mall_activity"
        android:clickable="true"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:paddingBottom="15px">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="@dimen/searchBarIconSize"
            android:layout_height="@dimen/searchBarIconSize"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="80px"
            android:background="@mipmap/nav_scan_w" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_search_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/searchEditHeight"
                android:alpha="0.36"
                android:background="@drawable/bg_search_bar"
                android:gravity="center_vertical"
                android:orientation="horizontal">


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:alpha="1"
                android:background="@mipmap/nav_search_w" />

            <TextView
                android:id="@+id/tv_search"
                style="@style/homeSearchTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="100px"
                android:layout_marginRight="30px"
                android:alpha="1"
                android:text="@{viewModel.searchText}"
                android:textColor="#fff"
                android:textSize="30px" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_warn"
            android:layout_width="@dimen/searchBarIconSize"
            android:layout_height="@dimen/searchBarIconSize"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="80px"
            android:background="@mipmap/nav_warn_w" />
    </LinearLayout>

</layout>